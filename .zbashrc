#####################################################################################################
# peco
#####################################################################################################
function cdf () {
  local dir=$(find ./* -type f | grep -v 'node_modules' | peco)
  if [ ! -z "$dir" ] ; then
    vim "$dir"
  fi
}

function cdd {
  local dir=$(find ./* -type d | grep -v 'node_modules' | peco)
  if [ ! -z "$dir" ] ; then
      cd "$dir"
  fi
}

function cddf {
  local dir=$(find ./* -type d | peco)
  if [ ! -z "$dir" ] ; then
      cd "$dir"
  fi
}

function cdff () {
  local dir=$(find ./* -type f | peco)
  if [ ! -z "$dir" ] ; then
    vim "$dir"
  fi
}


