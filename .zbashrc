#####################################################################################################
# nvm
#####################################################################################################
function npm () {
  echo 'npm function'
  unset -f npm
  load_npm

  if [ ! -z $1 ]; then
    npm $@
  fi
}

function node_vi () {
  unalias vi
  alias vi='nvim'
  
  if ! (type "node" > /dev/null 2>&1) ; then
    load_npm
  fi

  if [ ! -z $1 ]; then
    nvim $@
  else
    nvim
  fi
}

